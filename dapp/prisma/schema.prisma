// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  sports Sport[]
}

model Sport {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  leagues    League[]
}

model League {
  id        Int     @id @default(autoincrement())
  name      String
  logoUrl   String
  country   Country @relation(fields: [countryId], references: [id])
  apiId     Int     @unique
  sport     Sport   @relation(fields: [sportId], references: [id])
  sportId   Int
  games     Game[]
  countryId Int
}

model Game {
  id         Int       @id @default(autoincrement())
  apiId      Int       @unique
  contractId Int
  ipfs       String
  league     League    @relation(fields: [leagueId], references: [id])
  leagueId   Int
  Gameble    Gameble[]
}

model Gameble {
  id          Int      @id @default(autoincrement())
  contractId  Int
  name        String
  game        Game     @relation(fields: [gameId], references: [id])
  gameId      Int
  outcomes    String[]
  initialOdds Float[]
}

model Bookmaker {
  id    Int    @id @default(autoincrement())
  name  String
  apiId Int    @unique
}

model Country {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  code    String   @unique
  flagUrl String
  League  League[]
}
