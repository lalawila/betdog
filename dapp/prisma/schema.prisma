// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  sports Sport[]
}

model Sport {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  leagues    League[]
}

model League {
  id        Int     @id @default(autoincrement())
  name      String
  logoUrl   String
  country   Country @relation(fields: [countryId], references: [id])
  apiId     Int     @unique
  sport     Sport   @relation(fields: [sportId], references: [id])
  sportId   Int
  games     Game[]
  countryId Int
}

enum Status {
  NotStarted
  Finished
}

model Game {
  id         Int @id @default(autoincrement())
  apiId      Int @unique
  contractId Int
  timestamp  Int

  homeId Int
  awayId Int
  home   Team @relation("Home", fields: [homeId], references: [id])
  away   Team @relation("Away", fields: [awayId], references: [id])

  status Status @default(NotStarted)

  ipfs     String
  league   League    @relation(fields: [leagueId], references: [id])
  leagueId Int
  Gameble  Gameble[]
}

model Gameble {
  id          Int       @id @default(autoincrement())
  contractId  Int
  name        String
  game        Game      @relation(fields: [gameId], references: [id])
  gameId      Int
  outcomes    String[]
  initialOdds Decimal[] @db.Decimal(8, 4)
}

model Bookmaker {
  id    Int    @id @default(autoincrement())
  name  String
  apiId Int    @unique
}

model Country {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  code    String   @unique
  flagUrl String
  League  League[]
}

model Team {
  id      Int    @id @default(autoincrement())
  apiId   Int    @unique
  name    String
  logoUrl String
  Home    Game[] @relation("Home")
  Away    Game[] @relation("Away")
}
